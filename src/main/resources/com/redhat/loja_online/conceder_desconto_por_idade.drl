package com.redhat.loja_online

rule "Concede desconto de 20% quando o comprador tiver acima de 60 anos"
ruleflow-group "desconto-por-idade"
no-loop 
    when
        $compra: Compra( $cliente : cliente )
        $cliente( idade > 60 )
    then
        modify( $compra ){
        	setValorTotal( getValorTotal() - (getValorTotal * 0.2));
        }
end

